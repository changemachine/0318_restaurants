<html>
<head>
    <link rel="stylesheet" href="http:////maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <title>Best Restaurants</title>
</head>
<body>
    <div class="container">
        <h1>Welcome to Best Restaurants!</h1>
        <form action="/cuisine" method="post">
            <div class="form-group">
                <label for="type">New Cuisine:</label>
                <input id="type" name="type" type="text">
                <button type="submit" class='btn-xs btn-warning'>Add cuisine</button>
        </form>
    </div>

    <div class='container'>
        {% if cuisines is not empty %}
        <ul>
            {% for cuisine in cuisines %}
                <li><a href="/cuisine/{{ cuisine.getId }}">{{ cuisine.getType }}</a></li>
            {% endfor %}
        </ul>
        {% else %}
            <p>There are no cuisine types to display!</p>
        {% endif %}
    </div>

    <div class='container'>
        <form action="/delete_cuisines" method="post">
            <button type="submit" class="btn-xs btn-danger">Delete cuisines</button>
        </form>
    </div>

</body>
</html>
