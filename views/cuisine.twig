<html>
<head>
    <link rel="stylesheet" href="http:////maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <title>Restaurant List</title>
</head>

<body>
    <div class="container-fluid">
        <h1>{{ cuisines.getType }}</h1>
        <p><a href="/cuisine/{{ cuisines.getId }}/edit">Edit this cuisine</a></p>
        <h4>Add a restaurant</h4>

        <form action ="/restaurants" method="post">
            <input id="type_id" name="type_id" type="hidden" value="{{ cuisines.getId() }}">
            <div class="form-group">
                <label for 'name'>Restaurant Name</label>
                <input  id='name' name='name' type='text'>
            </div>
            <div class="form-group">
            <label for 'review'>Review</label>
            <textarea id='review' name='review' rows="2" cols="40"></textarea>
        </div>
        <div class="row">
            <div class='col-xs-4'>
                <select class='form-control' id='stars' name='stars'>
                    <option value=0>Rating</option>
                    <option value=1>*</option>
                    <option value=2>**</option>
                    <option value=3>***</option>
                    <option value=4>****</option>
                </select>
            <!-- <label for 'stars'>Stars</label>
            <input id='stars' name='stars' type='int'> -->
            </div>
            <div class='col-xs-4'></div>
            <div class='col-xs-4'></div>
        </div><br>
            <div class="form-group">
                <button class='btn btn-success' type="submit">Add Restaurant</button>
            </div>
        </form>

        {% if restaurants is not empty %}
        <p> Here are all of the restaurant(s) for this type of cuisine</p>
        <ul>
            {% for restaurant in restaurants %}
                <h4>{{ restaurant.getName }}</h4>
                <li>{{ restaurant.getReview }}</li>
                <li>{{ restaurant.getStars }}</li>
            {% endfor %}
        </ul>
        {% endif %}

        <form action="/delete_restaurants" method="post">
            <button type="submit">Delete All</button>
        </form>

        <p><a href='/'>Home</a></p>
    <div class="container">
</body>
</html>
